<div class="the_list">
  <h3>To do</h3>
  {{#todos}}
  {{#completed}}
  {{/completed}}
  {{^completed}}
  <div class="notDone">
    <form id="{{id}}" action="/complete/{{id}}" method="post">
      <button type="submit" name="task" value="{{task}}">âˆš</button>
    </form>
    <form action="/edit/{{id}}" method="post">
      <input class="item" type="text" name="item" value="{{item}}">
      <button type="submit" name="submit">Edit</button>
    </form>
    <a href="/remove/{{id}}">Remove</a>
  </div>
  {{/completed}}
  {{/todos}}
  <h3>Completed todos</h3>
  {{#todos}}
  {{#completed}}
  <div class="Done">
    <del><label>{{item}}</label></del>
  </div>
  {{/completed}}
  {{^completed}}
  {{/completed}}
  {{/todos}}
</div>
